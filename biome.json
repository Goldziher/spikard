{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/tests/**", "**/*.spec.ts", "e2e/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noApproximativeNumericConstant": "off"
					},
					"correctness": {
						"noUnusedFunctionParameters": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["e2e/node/app/main.ts", "e2e/node/app/server.ts"],
			"linter": {
				"rules": {
					"complexity": {
						"useLiteralKeys": "off"
					},
					"correctness": {
						"noPrecisionLoss": "off",
						"noUnusedFunctionParameters": "off"
					}
				}
			}
		},
		{
			"includes": ["examples/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"correctness": {
						"noUnusedPrivateClassMembers": "off",
						"noUnusedFunctionParameters": "off"
					}
				}
			}
		},
		{
			"includes": ["crates/spikard-node/index.js", "packages/node/index.js"],
			"linter": {
				"rules": {
					"suspicious": {
						"noGlobalAssign": "off"
					}
				}
			}
		},
		{
			"includes": ["**/scripts/**/*.ts", "tools/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["packages/node/src/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
