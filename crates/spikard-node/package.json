{
	"name": "@spikard/node",
	"version": "0.1.0",
	"description": "Node.js bindings for spikard",
	"main": "index.js",
	"types": "index.d.ts",
	"license": "MIT",
	"scripts": {
		"build": "napi build --platform --release",
		"build:debug": "napi build --platform",
		"test": "vitest run"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.4.1",
		"@types/node": "^24.10.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.11"
	},
	"napi": {
		"binaryName": "spikard-node",
		"targets": [
			"x86_64-apple-darwin",
			"aarch64-apple-darwin",
			"x86_64-unknown-linux-gnu",
			"x86_64-pc-windows-msvc"
		]
	},
	"dependencies": {
		"zod": "^4.1.12"
	}
}
