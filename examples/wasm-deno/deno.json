{
	"imports": {
		"@spikard/wasm": "npm:@spikard/wasm@0.3.7"
	},
	"tasks": {
		"dev": "deno run --allow-net --allow-read --watch src/main.ts",
		"run": "deno run --allow-net --allow-read src/main.ts",
		"start": "deno run --allow-net --allow-read src/main.ts"
	},
	"fmt": {
		"semiColons": true,
		"singleQuote": false
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"nodeModulesDirs": ["./node_modules"],
	"exclude": ["node_modules", "dist"]
}
