{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Request ID Test Fixture",
	"description": "Schema for request ID test fixtures covering automatic generation, client propagation, custom headers, and tracing integration using tower-http request-id middleware",
	"type": "object",
	"required": ["name", "description", "category", "source", "request", "expected_response", "handler"],
	"properties": {
		"name": {
			"type": "string",
			"description": "Human-readable test case name",
			"minLength": 1
		},
		"description": {
			"type": "string",
			"description": "What this test validates",
			"minLength": 1
		},
		"category": {
			"type": "string",
			"enum": ["request_id"],
			"description": "Test category"
		},
		"source": {
			"type": "object",
			"description": "Source framework and test location",
			"required": ["framework"],
			"properties": {
				"framework": {
					"type": "string",
					"description": "Source framework"
				},
				"inspired_by": {
					"type": "string",
					"description": "Framework or middleware that inspired this test"
				},
				"test_case": {
					"type": "string",
					"description": "Test case description"
				}
			}
		},
		"handler": {
			"type": "object",
			"description": "Handler configuration including middleware",
			"required": ["route", "method"],
			"properties": {
				"route": {
					"type": "string",
					"description": "API route path"
				},
				"method": {
					"type": "string",
					"enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
					"description": "HTTP method"
				},
				"middleware": {
					"type": "object",
					"description": "Middleware configuration",
					"properties": {
						"request_id": {
							"type": "object",
							"description": "Request ID middleware config using tower-http request-id",
							"properties": {
								"enabled": {
									"type": "boolean",
									"description": "Whether request ID middleware is enabled",
									"default": true
								},
								"header_name": {
									"type": "string",
									"description": "Header name for request ID (e.g., X-Request-ID, X-Correlation-ID)",
									"default": "X-Request-ID"
								},
								"format": {
									"type": "string",
									"enum": ["uuid_v4", "ulid", "custom"],
									"description": "Format for auto-generated request IDs",
									"default": "uuid_v4"
								},
								"make_request_id": {
									"type": "string",
									"description": "Custom request ID generation function/pattern"
								},
								"propagate_to_response": {
									"type": "boolean",
									"description": "Whether to include request ID in response headers",
									"default": true
								},
								"validate_format": {
									"type": "boolean",
									"description": "Whether to validate client-provided request ID format",
									"default": false
								}
							}
						}
					}
				},
				"response_type": {
					"type": "string",
					"enum": ["success", "error", "validation_error"],
					"description": "Type of response to simulate"
				}
			}
		},
		"request": {
			"type": "object",
			"description": "HTTP request details",
			"required": ["method", "path"],
			"properties": {
				"method": {
					"type": "string",
					"enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"],
					"description": "HTTP method"
				},
				"path": {
					"type": "string",
					"description": "Request path",
					"minLength": 1
				},
				"headers": {
					"type": "object",
					"description": "Request headers as key-value pairs",
					"additionalProperties": { "type": "string" }
				},
				"body": {
					"description": "Request body (any JSON type)"
				}
			}
		},
		"expected_response": {
			"type": "object",
			"description": "Expected HTTP response",
			"required": ["status_code"],
			"properties": {
				"status_code": {
					"type": "integer",
					"description": "Expected HTTP status code",
					"minimum": 100,
					"maximum": 599
				},
				"body": {
					"description": "Expected response body (any JSON type)"
				},
				"headers": {
					"type": "object",
					"description": "Expected response headers",
					"additionalProperties": {
						"oneOf": [
							{ "type": "string" },
							{
								"type": "object",
								"properties": {
									"pattern": {
										"type": "string",
										"description": "Regex pattern for header value validation"
									},
									"description": {
										"type": "string",
										"description": "Description of expected header format"
									}
								},
								"required": ["pattern"]
							}
						]
					}
				}
			}
		},
		"tags": {
			"type": "array",
			"description": "Tags for categorizing and filtering tests",
			"items": { "type": "string" }
		},
		"notes": {
			"type": "string",
			"description": "Additional notes or implementation details"
		},
		"concurrent_requests": {
			"type": "integer",
			"description": "Number of concurrent requests to simulate (for uniqueness tests)",
			"minimum": 1
		},
		"assert_unique_ids": {
			"type": "boolean",
			"description": "Assert that all concurrent requests receive unique request IDs"
		}
	}
}
