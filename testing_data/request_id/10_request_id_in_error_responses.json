{
	"name": "Request ID present in error responses",
	"description": "Tests that request ID is included in response headers even for 4xx and 5xx error responses",
	"category": "request_id",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower-http request-id",
		"test_case": "Propagate request ID in error responses for debugging"
	},
	"handler": {
		"route": "/api/error-endpoint",
		"method": "POST",
		"middleware": {
			"request_id": {
				"enabled": true,
				"header_name": "X-Request-ID",
				"format": "uuid_v4",
				"propagate_to_response": true
			}
		},
		"response_type": "validation_error"
	},
	"request": {
		"method": "POST",
		"path": "/api/error-endpoint",
		"headers": {
			"X-Request-ID": "error-trace-456"
		},
		"body": {
			"invalid": "data"
		}
	},
	"expected_response": {
		"status_code": 422,
		"body": {
			"type": "about:blank",
			"title": "Unprocessable Entity",
			"status": 422,
			"detail": "Validation failed",
			"errors": [
				{
					"loc": ["body", "required_field"],
					"msg": "field required",
					"type": "value_error.missing"
				}
			]
		},
		"headers": {
			"X-Request-ID": "error-trace-456"
		}
	},
	"tags": ["request_id", "middleware", "error-handling", "422", "debugging"],
	"notes": "Request IDs are critical for debugging and must be included in all responses, especially errors, to enable log correlation"
}
