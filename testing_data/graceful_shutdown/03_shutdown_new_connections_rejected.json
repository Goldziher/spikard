{
	"name": "New connections rejected after shutdown initiated",
	"description": "Tests that new connection attempts are rejected after shutdown signal is received",
	"category": "graceful_shutdown",
	"source": {
		"framework": "spikard",
		"inspired_by": "axum_graceful_shutdown",
		"test_case": "post-shutdown connection rejection"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"graceful_shutdown": {
				"enabled": true,
				"grace_period_seconds": 30,
				"force_timeout_seconds": 60
			}
		}
	},
	"test_scenario": {
		"phases": [
			{
				"phase": "trigger_shutdown",
				"description": "Send shutdown signal to server",
				"actions": [
					{
						"type": "signal",
						"signal": "SIGTERM"
					}
				]
			},
			{
				"phase": "attempt_new_connection",
				"description": "Attempt to establish new connection after shutdown initiated",
				"delay_ms": 100,
				"actions": [
					{
						"type": "request",
						"request": {
							"method": "GET",
							"path": "/api/data",
							"headers": {
								"Accept": "application/json"
							}
						},
						"expected_result": "connection_refused"
					}
				]
			}
		]
	},
	"tags": ["graceful_shutdown", "integration", "lifecycle", "connection-refused", "post-shutdown"],
	"notes": "New connections are rejected after shutdown initiated. Server stops accepting new work while finishing existing requests."
}
