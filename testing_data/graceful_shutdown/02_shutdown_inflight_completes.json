{
	"name": "In-flight request completes during grace period",
	"description": "Tests that requests already in progress complete successfully during graceful shutdown grace period",
	"category": "graceful_shutdown",
	"source": {
		"framework": "spikard",
		"inspired_by": "axum_graceful_shutdown",
		"test_case": "in-flight request completion"
	},
	"handler": {
		"route": "/api/slow",
		"method": "GET",
		"middleware": {
			"graceful_shutdown": {
				"enabled": true,
				"grace_period_seconds": 30,
				"force_timeout_seconds": 60
			}
		}
	},
	"test_scenario": {
		"phases": [
			{
				"phase": "initiate_request",
				"description": "Start a request that will take several seconds to complete",
				"actions": [
					{
						"type": "request",
						"request": {
							"method": "GET",
							"path": "/api/slow",
							"headers": {
								"Accept": "application/json"
							},
							"simulated_duration_ms": 5000
						},
						"expect_async": true
					}
				]
			},
			{
				"phase": "trigger_shutdown",
				"description": "Send shutdown signal while request is in flight",
				"delay_ms": 1000,
				"actions": [
					{
						"type": "signal",
						"signal": "SIGTERM"
					}
				]
			},
			{
				"phase": "verify_completion",
				"description": "Wait for and verify the in-flight request completes successfully",
				"actions": [
					{
						"type": "wait_for_response",
						"expected_response": {
							"status_code": 200,
							"headers": {
								"Content-Type": "application/json"
							},
							"body": {
								"message": "Request completed",
								"processing_time_ms": 5000
							}
						},
						"timeout_ms": 10000
					}
				]
			}
		]
	},
	"tags": ["graceful_shutdown", "integration", "lifecycle", "in-flight", "grace-period"],
	"notes": "In-flight requests should complete before shutdown. The grace period allows pending work to finish."
}
