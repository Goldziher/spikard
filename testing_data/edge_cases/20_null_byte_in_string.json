{
  "name": "20_null_byte_in_string",
  "description": "Null byte character in strings should be rejected for security",
  "category": "edge_cases",
  "source": {
    "framework": "spikard",
    "inspired_by": "security_best_practices",
    "test_case": "Null byte injection prevention"
  },
  "handler": {
    "route": "/files",
    "method": "POST",
    "body_schema": {
      "type": "object",
      "required": [
        "filename"
      ],
      "properties": {
        "filename": {
          "type": "string",
          "pattern": "^[^\\x00]+$"
        }
      }
    }
  },
  "request": {
    "method": "POST",
    "path": "/files",
    "body": {
      "filename": "file\u0000.txt"
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "string_pattern_mismatch",
          "loc": [
            "body",
            "filename"
          ],
          "msg": "String should match pattern '^[^\\x00]+$'",
          "input": "file\u0000.txt",
          "ctx": {
            "pattern": "^[^\\x00]+$"
          }
        }
      ]
    }
  },
  "tags": [
    "edge_cases",
    "security",
    "null_byte",
    "validation",
    "error"
  ]
}
