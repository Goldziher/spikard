{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Edge Cases Test Fixture",
  "description": "Test fixture for edge cases and boundary conditions",
  "type": "object",
  "required": ["name", "description", "source", "request", "expected_response"],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": ["framework", "test_file", "test_function"],
      "properties": {
        "framework": {
          "type": "string",
          "enum": ["fastapi", "starlette", "litestar"]
        },
        "test_file": {
          "type": "string"
        },
        "test_function": {
          "type": "string"
        }
      }
    },
    "request": {
      "type": "object",
      "required": ["method", "path"],
      "properties": {
        "method": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "headers": {
          "type": "object"
        },
        "query_params": {
          "type": "object"
        },
        "body": true
      }
    },
    "expected_response": {
      "type": "object",
      "required": ["status_code"],
      "properties": {
        "status_code": {
          "type": "integer"
        },
        "body": true,
        "headers": {
          "type": "object"
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
