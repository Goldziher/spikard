{
	"name": "12_percent_encoded_special_chars",
	"description": "Percent-encoded special characters should be decoded correctly",
	"category": "edge_cases",
	"source": {
		"framework": "spikard",
		"inspired_by": "litestar",
		"test_case": "Percent encoding in query parameters"
	},
	"handler": {
		"route": "/search",
		"method": "GET",
		"parameters": {
			"query": {
				"term": {
					"type": "string"
				}
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/search?term=hi%20there",
		"query_params": {
			"term": "hi there"
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"term": "hi there"
		}
	},
	"tags": ["edge_cases", "percent_encoding", "query_params", "decoding", "success"]
}
