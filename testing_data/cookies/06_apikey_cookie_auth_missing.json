{
	"name": "APIKey cookie authentication - missing",
	"description": "Tests APIKeyCookie authentication returns 403 when cookie missing",
	"source": {
		"framework": "fastapi",
		"test_file": "tests/test_security_api_key_cookie.py",
		"test_function": "test_security_api_key_no_key"
	},
	"handler": {
		"route": "/users/me/auth",
		"method": "GET",
		"parameters": {
			"cookies": {
				"key": {
					"type": "string",
					"required": true
				}
			}
		},
		"security": {
			"type": "apiKey",
			"in": "cookie",
			"name": "key"
		}
	},
	"request": {
		"method": "GET",
		"path": "/users/me/auth"
	},
	"expected_response": {
		"status_code": 422,
		"body": {
			"type": "https://spikard.dev/errors/validation-error",
			"title": "Request Validation Failed",
			"status": 422,
			"detail": "1 validation error in request",
			"errors": [
				{
					"type": "missing",
					"loc": ["cookie", "key"],
					"msg": "Field required",
					"input": null
				}
			]
		}
	},
	"notes": "Missing required API key cookie returns 403 Forbidden"
}
