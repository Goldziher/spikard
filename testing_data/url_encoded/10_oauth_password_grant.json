{
	"name": "OAuth2 password grant flow",
	"description": "Tests OAuth2 password grant with form data",
	"source": {
		"framework": "fastapi",
		"test_file": "tests/test_tutorial/test_security/test_tutorial003.py",
		"test_function": "test_login"
	},
	"handler": {
		"route": "/token",
		"method": "POST",
		"body_schema": {
			"type": "object",
			"required": ["username", "password", "grant_type"],
			"properties": {
				"username": {
					"type": "string"
				},
				"password": {
					"type": "string"
				},
				"grant_type": {
					"type": "string"
				},
				"scope": {
					"type": "string"
				}
			}
		}
	},
	"request": {
		"method": "POST",
		"path": "/token",
		"headers": {
			"Content-Type": "application/x-www-form-urlencoded"
		},
		"form_data": {
			"username": "johndoe",
			"password": "secret",
			"grant_type": "password",
			"scope": ""
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"access_token": "johndoe",
			"token_type": "bearer"
		}
	},
	"notes": "OAuth2 password grant requires grant_type, username, password fields"
}
