{
  "name": "13_array_field_success",
  "description": "URL-encoded form with array field using bracket notation should parse correctly",
  "category": "url_encoded",
  "source": {
    "framework": "spikard",
    "inspired_by": "fastify",
    "test_case": "Array field parsing with bracket notation"
  },
  "handler": {
    "route": "/register",
    "method": "POST",
    "content_type": "application/x-www-form-urlencoded",
    "body_schema": {
      "type": "object",
      "required": ["tags"],
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    }
  },
  "request": {
    "method": "POST",
    "path": "/register",
    "headers": {
      "Content-Type": "application/x-www-form-urlencoded"
    },
    "body": "tags[]=python&tags[]=rust&tags[]=typescript"
  },
  "expected_response": {
    "status_code": 201,
    "body": {
      "tags": ["python", "rust", "typescript"]
    }
  },
  "tags": ["url_encoded", "arrays", "validation", "success"]
}
