{
  "openrpc": "1.3.2",
  "info": {
    "title": "Simple Calculator RPC API",
    "description": "A simple JSON-RPC 2.0 API for basic arithmetic operations demonstrating scalar types and error handling",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "name": "Production",
      "url": "https://rpc.example.com/v1"
    },
    {
      "name": "Development",
      "url": "http://localhost:8080/v1"
    }
  ],
  "methods": [
    {
      "name": "calculator.add",
      "description": "Add two numbers together",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "a",
          "description": "First number",
          "required": true,
          "schema": {
            "type": "number"
          }
        },
        {
          "name": "b",
          "description": "Second number",
          "required": true,
          "schema": {
            "type": "number"
          }
        }
      ],
      "result": {
        "name": "sum",
        "description": "Sum of the two numbers",
        "schema": {
          "type": "number"
        }
      },
      "examples": [
        {
          "name": "Integer addition",
          "description": "Adding two integers",
          "params": [
            {
              "name": "a",
              "value": 5
            },
            {
              "name": "b",
              "value": 3
            }
          ],
          "result": {
            "name": "sum",
            "value": 8
          }
        },
        {
          "name": "Decimal addition",
          "description": "Adding floating point numbers",
          "params": [
            {
              "name": "a",
              "value": 2.5
            },
            {
              "name": "b",
              "value": 1.5
            }
          ],
          "result": {
            "name": "sum",
            "value": 4.0
          }
        }
      ]
    },
    {
      "name": "calculator.subtract",
      "description": "Subtract one number from another",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "a",
          "description": "Minuend (number to subtract from)",
          "required": true,
          "schema": {
            "type": "number"
          }
        },
        {
          "name": "b",
          "description": "Subtrahend (number to subtract)",
          "required": true,
          "schema": {
            "type": "number"
          }
        }
      ],
      "result": {
        "name": "difference",
        "description": "Difference of the two numbers",
        "schema": {
          "type": "number"
        }
      },
      "examples": [
        {
          "name": "Integer subtraction",
          "params": [
            {
              "name": "a",
              "value": 10
            },
            {
              "name": "b",
              "value": 3
            }
          ],
          "result": {
            "name": "difference",
            "value": 7
          }
        }
      ]
    },
    {
      "name": "calculator.multiply",
      "description": "Multiply two numbers together",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "a",
          "description": "First number",
          "required": true,
          "schema": {
            "type": "number"
          }
        },
        {
          "name": "b",
          "description": "Second number",
          "required": true,
          "schema": {
            "type": "number"
          }
        }
      ],
      "result": {
        "name": "product",
        "description": "Product of the two numbers",
        "schema": {
          "type": "number"
        }
      },
      "examples": [
        {
          "name": "Integer multiplication",
          "params": [
            {
              "name": "a",
              "value": 4
            },
            {
              "name": "b",
              "value": 5
            }
          ],
          "result": {
            "name": "product",
            "value": 20
          }
        }
      ]
    },
    {
      "name": "calculator.divide",
      "description": "Divide one number by another",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "a",
          "description": "Dividend (number to divide)",
          "required": true,
          "schema": {
            "type": "number"
          }
        },
        {
          "name": "b",
          "description": "Divisor (number to divide by)",
          "required": true,
          "schema": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      ],
      "result": {
        "name": "quotient",
        "description": "Result of division",
        "schema": {
          "type": "number"
        }
      },
      "errors": [
        {
          "code": -32001,
          "message": "Division by zero",
          "description": "The divisor cannot be zero"
        }
      ],
      "examples": [
        {
          "name": "Integer division",
          "params": [
            {
              "name": "a",
              "value": 20
            },
            {
              "name": "b",
              "value": 4
            }
          ],
          "result": {
            "name": "quotient",
            "value": 5.0
          }
        }
      ]
    },
    {
      "name": "calculator.power",
      "description": "Raise a number to a power",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "base",
          "description": "Base number",
          "required": true,
          "schema": {
            "type": "number"
          }
        },
        {
          "name": "exponent",
          "description": "Power to raise base to",
          "required": true,
          "schema": {
            "type": "number"
          }
        }
      ],
      "result": {
        "name": "result",
        "description": "Base raised to the power of exponent",
        "schema": {
          "type": "number"
        }
      },
      "examples": [
        {
          "name": "Square",
          "params": [
            {
              "name": "base",
              "value": 2
            },
            {
              "name": "exponent",
              "value": 3
            }
          ],
          "result": {
            "name": "result",
            "value": 8
          }
        }
      ]
    },
    {
      "name": "calculator.sqrt",
      "description": "Calculate the square root of a number",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "x",
          "description": "Number to find square root of",
          "required": true,
          "schema": {
            "type": "number",
            "minimum": 0
          }
        }
      ],
      "result": {
        "name": "result",
        "description": "Square root of x",
        "schema": {
          "type": "number",
          "minimum": 0
        }
      },
      "examples": [
        {
          "name": "Perfect square",
          "params": [
            {
              "name": "x",
              "value": 16
            }
          ],
          "result": {
            "name": "result",
            "value": 4.0
          }
        }
      ]
    },
    {
      "name": "calculator.abs",
      "description": "Get the absolute value of a number",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "x",
          "description": "Number to get absolute value of",
          "required": true,
          "schema": {
            "type": "number"
          }
        }
      ],
      "result": {
        "name": "result",
        "description": "Absolute value of x",
        "schema": {
          "type": "number",
          "minimum": 0
        }
      },
      "examples": [
        {
          "name": "Negative number",
          "params": [
            {
              "name": "x",
              "value": -42
            }
          ],
          "result": {
            "name": "result",
            "value": 42
          }
        }
      ]
    },
    {
      "name": "calculator.round",
      "description": "Round a number to a specified number of decimal places",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "value",
          "description": "Number to round",
          "required": true,
          "schema": {
            "type": "number"
          }
        },
        {
          "name": "decimals",
          "description": "Number of decimal places",
          "required": false,
          "schema": {
            "type": "integer",
            "minimum": 0,
            "default": 0
          }
        }
      ],
      "result": {
        "name": "result",
        "description": "Rounded number",
        "schema": {
          "type": "number"
        }
      },
      "examples": [
        {
          "name": "Round to integers",
          "params": [
            {
              "name": "value",
              "value": 3.7
            },
            {
              "name": "decimals",
              "value": 0
            }
          ],
          "result": {
            "name": "result",
            "value": 4
          }
        },
        {
          "name": "Round to two decimals",
          "params": [
            {
              "name": "value",
              "value": 3.14159
            },
            {
              "name": "decimals",
              "value": 2
            }
          ],
          "result": {
            "name": "result",
            "value": 3.14
          }
        }
      ]
    },
    {
      "name": "calculator.batch",
      "description": "Perform multiple operations in a single batch request",
      "tags": [
        {
          "name": "calculator"
        }
      ],
      "params": [
        {
          "name": "operations",
          "description": "Array of operations to perform",
          "required": true,
          "schema": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["op", "a", "b"],
              "properties": {
                "op": {
                  "type": "string",
                  "enum": ["add", "subtract", "multiply", "divide"]
                },
                "a": {
                  "type": "number"
                },
                "b": {
                  "type": "number"
                }
              }
            }
          }
        }
      ],
      "result": {
        "name": "results",
        "description": "Array of operation results",
        "schema": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "examples": [
        {
          "name": "Multiple operations",
          "params": [
            {
              "name": "operations",
              "value": [
                {
                  "op": "add",
                  "a": 5,
                  "b": 3
                },
                {
                  "op": "multiply",
                  "a": 4,
                  "b": 2
                }
              ]
            }
          ],
          "result": {
            "name": "results",
            "value": [8, 8]
          }
        }
      ]
    }
  ]
}
