{
	"name": "415 Unsupported Media Type",
	"description": "Tests rejection of unsupported content type",
	"source": {
		"framework": "fastapi",
		"test_file": "tests/test_request_body.py",
		"test_function": "test_unsupported_media_type"
	},
	"handler": {
		"route": "/items/",
		"method": "POST",
		"body_schema": {
			"type": "string"
		}
	},
	"request": {
		"method": "POST",
		"path": "/items/",
		"headers": {
			"Content-Type": "application/xml"
		},
		"body": "<?xml version=\"1.0\"?><item><name>Item</name></item>"
	},
	"expected_response": {
		"status_code": 415,
		"body": {
			"detail": "Unsupported media type"
		}
	},
	"notes": "415 when Content-Type is not supported (expects JSON)"
}
