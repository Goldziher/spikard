{
  "name": "61_format_ipv4_failure",
  "description": "Query parameter with invalid IPv4 address should fail validation",
  "category": "query_params",
  "source": {
    "framework": "spikard",
    "inspired_by": "fastify",
    "test_case": "Format validator ipv4 failure"
  },
  "handler": {
    "route": "/network",
    "method": "GET",
    "parameters": {
      "query": {
        "ip": {
          "type": "string",
          "format": "ipv4",
          "required": true
        }
      }
    }
  },
  "request": {
    "method": "GET",
    "path": "/network",
    "query_params": {
      "ip": "999.999.999.999"
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "validation_error",
          "loc": [
            "query",
            "ip"
          ],
          "msg": "Invalid IPv4 address format",
          "ctx": {
            "format": "ipv4",
            "value": "999.999.999.999"
          }
        }
      ]
    }
  },
  "tags": [
    "query_params",
    "format",
    "ipv4",
    "validation",
    "error"
  ]
}
