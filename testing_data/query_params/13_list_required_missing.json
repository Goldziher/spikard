{
	"name": "List query parameter - required but missing",
	"description": "Tests required list parameter without any values, should return 422",
	"source": {
		"framework": "fastapi",
		"test_file": "tests/test_query.py",
		"test_function": "test_query_list_empty"
	},
	"request": {
		"method": "GET",
		"path": "/query/list"
	},
	"expected_response": {
		"status_code": 422,
		"body": {
			"type": "https://spikard.dev/errors/validation-error",
			"title": "Request Validation Failed",
			"status": 422,
			"detail": "1 validation error in request",
			"errors": [
				{
					"type": "missing",
					"loc": ["query", "device_ids"],
					"msg": "Field required",
					"input": null
				}
			]
		}
	},
	"notes": "List without default requires at least one value",
	"handler": {
		"route": "/query/list",
		"method": "GET",
		"parameters": {
			"query": {
				"device_ids": {
					"type": "array",
					"annotation": "list[int]",
					"items": {
						"type": "integer"
					}
				}
			}
		}
	}
}
