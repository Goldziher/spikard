    "framework": "fastapi",
    "test_file": "tests/test_query.py",
    "test_function": "test_query_int"
  },
  "request": {
    "method": "GET",
    "path": "/query/int"
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "missing",
          "loc": [
            "query",
            "query"
          ],
