{
  "name": "23_503_service_unavailable",
  "description": "Service temporarily unavailable should return 503 with Retry-After",
  "category": "status_codes",
  "source": {
    "framework": "spikard",
    "inspired_by": "http_specs",
    "test_case": "Service unavailability handling"
  },
  "handler": {
    "route": "/data",
    "method": "GET",
    "health_check": {
      "enabled": true,
      "status": "unavailable"
    }
  },
  "request": {
    "method": "GET",
    "path": "/data"
  },
  "expected_response": {
    "status_code": 503,
    "headers": {
      "Retry-After": "60"
    },
    "body": {
      "error": "Service Unavailable",
      "message": "The service is temporarily unavailable. Please try again later."
    }
  },
  "tags": ["status_codes", "503", "service_unavailable", "error"]
}
