{
	"name": "Rate limit - headers present",
	"description": "Validates that all RateLimit headers are present in successful responses",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "IETF draft-polli-ratelimit-headers",
		"test_case": "RateLimit headers in response"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 100,
				"burst": 20,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.5"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "100",
			"RateLimit-Remaining": "99"
		}
	},
	"tags": ["rate_limit", "headers", "rfc", "success"],
	"notes": "Verifies presence of RateLimit-Limit and RateLimit-Remaining headers"
}
