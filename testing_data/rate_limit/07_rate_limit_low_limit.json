{
	"name": "Rate limit - low limit configuration",
	"description": "Tests rate limiting with very low per_second limit (1/sec)",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Strict rate limiting for expensive operations"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 1,
				"burst": 2,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.7"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "1",
			"RateLimit-Remaining": "0"
		}
	},
	"tags": ["rate_limit", "configuration", "strict", "success"],
	"notes": "Low limits for resource-intensive operations like password resets"
}
