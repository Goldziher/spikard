{
	"name": "Rate limit - token bucket refill",
	"description": "Tests that GCRA token bucket refills over time allowing new requests",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor GCRA algorithm",
		"test_case": "Token bucket refill over time"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 2,
				"burst": 0,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.15",
		"delay_ms": 1000
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "2",
			"RateLimit-Remaining": "1"
		}
	},
	"tags": ["rate_limit", "gcra", "token-bucket", "time-based", "success"],
	"notes": "After waiting 1 second, tokens should refill allowing new requests (2/sec)"
}
