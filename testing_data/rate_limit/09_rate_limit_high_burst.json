{
	"name": "Rate limit - high burst allowance",
	"description": "Tests rate limiting with high burst capacity (burst=100)",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Allow large burst for bursty workloads"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 10,
				"burst": 100,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.9"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "10",
			"RateLimit-Remaining": "9"
		}
	},
	"tags": ["rate_limit", "configuration", "high-burst", "success"],
	"notes": "High burst allows up to 110 rapid requests before rate limiting kicks in"
}
