{
	"name": "Rate limit - sequential requests",
	"description": "Tests multiple sequential requests to verify rate limit counter decrements properly",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Sequential request handling"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 5,
				"burst": 2,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.11"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "5",
			"RateLimit-Remaining": "4"
		}
	},
	"request_sequence": [
		{
			"delay_ms": 0,
			"expected_status": 200
		},
		{
			"delay_ms": 0,
			"expected_status": 200
		},
		{
			"delay_ms": 0,
			"expected_status": 200
		}
	],
	"tags": ["rate_limit", "sequential", "integration", "gcra"],
	"notes": "Tests that making multiple requests decrements the remaining count correctly"
}
