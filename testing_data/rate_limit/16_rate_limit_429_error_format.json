{
	"name": "Rate limit - RFC 9457 error format",
	"description": "Validates that 429 responses follow RFC 9457 Problem Details format",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "RFC 9457",
		"test_case": "429 response format validation"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 1,
				"burst": 0,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.16"
	},
	"expected_response": {
		"status_code": 429,
		"body": {
			"type": "https://spikard.dev/errors/rate-limit-exceeded",
			"title": "Too Many Requests",
			"status": 429,
			"detail": "Rate limit exceeded. Please retry after the specified time."
		},
		"headers": {
			"RateLimit-Limit": "1",
			"RateLimit-Remaining": "0",
			"Retry-After": "1"
		}
	},
	"tags": ["rate_limit", "error-format", "rfc9457", "429", "validation"],
	"notes": "Error response must include type, title, status, and detail fields per RFC 9457"
}
