{
	"name": "Compression - gzip applied",
	"description": "Tests gzip compression when client supports it via Accept-Encoding header",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "Gzip compression with default settings"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": true,
				"algorithms": ["gzip", "br"],
				"level": 6,
				"min_size_bytes": 1024
			}
		},
		"response_body_size": 5000
	},
	"request": {
		"method": "GET",
		"path": "/api/data",
		"headers": {
			"Accept-Encoding": "gzip"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Encoding": "gzip",
			"Vary": "Accept-Encoding"
		},
		"body": {
			"message": "Success",
			"data": "Large payload that benefits from compression"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 5000,
			"compressed_size_bytes": 1200,
			"compression_ratio": 4.17
		}
	},
	"tags": ["compression", "middleware", "gzip", "performance", "tower-http"],
	"notes": "Compression applied because response size (5000 bytes) exceeds min_size_bytes threshold (1024 bytes). tower-http::compression::CompressionLayer with async-compression backend."
}
