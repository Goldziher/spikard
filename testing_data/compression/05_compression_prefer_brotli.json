{
	"name": "Compression - client prefers brotli",
	"description": "Tests content negotiation when client prefers brotli over gzip using quality values",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "Content negotiation with quality values favoring brotli"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": true,
				"algorithms": ["gzip", "br"],
				"level": 6,
				"min_size_bytes": 1024
			}
		},
		"response_body_size": 5000
	},
	"request": {
		"method": "GET",
		"path": "/api/data",
		"headers": {
			"Accept-Encoding": "br, gzip;q=0.8"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Encoding": "br",
			"Vary": "Accept-Encoding"
		},
		"body": {
			"message": "Success",
			"data": "Large payload compressed with brotli"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 5000,
			"compressed_size_bytes": 1100,
			"compression_ratio": 4.55
		}
	},
	"tags": ["compression", "middleware", "brotli", "content-negotiation", "quality-values", "tower-http"],
	"notes": "Quality value q=0.8 for gzip indicates lower preference. Brotli has implicit q=1.0 so it's selected. tower-http respects RFC 7231 content negotiation."
}
