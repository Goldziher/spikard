{
	"name": "Compression - disabled middleware",
	"description": "Tests that no compression occurs when middleware is explicitly disabled",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "Compression middleware disabled via configuration"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": false
			}
		},
		"response_body_size": 5000
	},
	"request": {
		"method": "GET",
		"path": "/api/data",
		"headers": {
			"Accept-Encoding": "gzip, br"
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success",
			"data": "Large payload sent uncompressed"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 5000,
			"compressed_size_bytes": 5000,
			"compression_ratio": 1.0
		}
	},
	"tags": ["compression", "middleware", "disabled", "configuration", "tower-http"],
	"notes": "When enabled=false, CompressionLayer is not added to the tower stack. Useful for debugging or specific routes where compression is undesirable."
}
