{
	"name": "Compression - no client support",
	"description": "Tests that compression is not applied when client doesn't send Accept-Encoding header",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "No compression without Accept-Encoding header"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": true,
				"algorithms": ["gzip", "br"],
				"level": 6,
				"min_size_bytes": 1024
			}
		},
		"response_body_size": 5000
	},
	"request": {
		"method": "GET",
		"path": "/api/data"
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Encoding": null
		},
		"body": {
			"message": "Success",
			"data": "Large payload sent uncompressed"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 5000,
			"compressed_size_bytes": 5000,
			"compression_ratio": 1.0
		}
	},
	"tags": ["compression", "middleware", "no-compression", "tower-http"],
	"notes": "Without Accept-Encoding header, the middleware serves uncompressed content. Client compatibility takes precedence over bandwidth optimization."
}
