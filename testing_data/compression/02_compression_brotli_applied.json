{
	"name": "Compression - brotli applied",
	"description": "Tests brotli compression when client supports it via Accept-Encoding header",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "Brotli compression with default settings"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": true,
				"algorithms": ["gzip", "br"],
				"level": 6,
				"min_size_bytes": 1024
			}
		},
		"response_body_size": 5000
	},
	"request": {
		"method": "GET",
		"path": "/api/data",
		"headers": {
			"Accept-Encoding": "br"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Encoding": "br",
			"Vary": "Accept-Encoding"
		},
		"body": {
			"message": "Success",
			"data": "Large payload that benefits from compression"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 5000,
			"compressed_size_bytes": 1100,
			"compression_ratio": 4.55
		}
	},
	"tags": ["compression", "middleware", "brotli", "performance", "tower-http"],
	"notes": "Brotli typically achieves better compression ratios than gzip at similar speeds. tower-http uses async-compression crate for streaming compression."
}
