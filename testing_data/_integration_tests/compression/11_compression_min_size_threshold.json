{
	"name": "Compression - minimum size threshold",
	"description": "Tests that compression is only applied when response size exceeds configured threshold",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "Compression threshold prevents overhead on small responses"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": true,
				"algorithms": ["gzip", "br"],
				"level": 6,
				"min_size_bytes": 5000
			}
		},
		"response_body_size": 10000
	},
	"request": {
		"method": "GET",
		"path": "/api/data",
		"headers": {
			"Accept-Encoding": "gzip"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Encoding": "gzip",
			"Vary": "Accept-Encoding"
		},
		"body": {
			"message": "Success",
			"data": "Large payload exceeding minimum threshold"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 10000,
			"compressed_size_bytes": 2400,
			"compression_ratio": 4.17
		}
	},
	"tags": ["compression", "middleware", "gzip", "threshold", "performance", "tower-http"],
	"notes": "Response size (10000 bytes) exceeds min_size_bytes (5000 bytes), so compression is applied. Small responses would skip compression to avoid overhead."
}
