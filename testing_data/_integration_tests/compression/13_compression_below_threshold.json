{
	"name": "Compression - response below minimum size threshold",
	"description": "Tests that compression is skipped when response size is below the configured minimum threshold",
	"category": "compression",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_http::compression::CompressionLayer",
		"test_case": "min_size_bytes threshold enforcement"
	},
	"handler": {
		"route": "/api/small",
		"method": "GET",
		"middleware": {
			"compression": {
				"enabled": true,
				"algorithms": ["gzip", "br"],
				"level": 6,
				"min_size_bytes": 1024
			}
		},
		"response_body_size": 512
	},
	"request": {
		"method": "GET",
		"path": "/api/small",
		"headers": {
			"Accept-Encoding": "gzip, br"
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Small payload"
		},
		"compression_metrics": {
			"uncompressed_size_bytes": 512,
			"compressed_size_bytes": 512,
			"compression_ratio": 1.0
		}
	},
	"tags": ["compression", "middleware", "threshold", "min-size", "tower-http"],
	"notes": "Compression overhead isn't worth it for tiny payloads. min_size_bytes prevents CPU waste on responses that won't benefit from compression."
}
