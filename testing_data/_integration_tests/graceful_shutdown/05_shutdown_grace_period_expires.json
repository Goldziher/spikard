{
	"name": "Long-running request terminated when grace period expires",
	"description": "Tests that requests still running after grace period expiration are forcefully terminated",
	"category": "graceful_shutdown",
	"source": {
		"framework": "spikard",
		"inspired_by": "axum_graceful_shutdown",
		"test_case": "grace period expiration"
	},
	"handler": {
		"route": "/api/very-long-task",
		"method": "POST",
		"middleware": {
			"graceful_shutdown": {
				"enabled": true,
				"grace_period_seconds": 5,
				"force_timeout_seconds": 10
			}
		}
	},
	"test_scenario": {
		"phases": [
			{
				"phase": "initiate_very_long_request",
				"description": "Start a request that would take 30 seconds (exceeds 5s grace period)",
				"actions": [
					{
						"type": "request",
						"request": {
							"method": "POST",
							"path": "/api/very-long-task",
							"headers": {
								"Content-Type": "application/json",
								"Accept": "application/json"
							},
							"body": {
								"task": "heavy_computation",
								"duration_seconds": 30
							},
							"simulated_duration_ms": 30000
						},
						"expect_async": true
					}
				]
			},
			{
				"phase": "trigger_shutdown",
				"description": "Send shutdown signal immediately",
				"delay_ms": 500,
				"actions": [
					{
						"type": "signal",
						"signal": "SIGTERM"
					}
				]
			},
			{
				"phase": "verify_forced_termination",
				"description": "Verify the request is terminated after grace period expires",
				"actions": [
					{
						"type": "wait_for_response",
						"expected_response": {
							"status_code": 503,
							"headers": {
								"Content-Type": "application/json"
							},
							"body": {
								"error": "Service shutting down",
								"message": "Request terminated due to shutdown grace period expiration",
								"grace_period_seconds": 5
							}
						},
						"timeout_ms": 8000
					}
				]
			}
		]
	},
	"tags": ["graceful_shutdown", "integration", "lifecycle", "force-termination", "grace-period-expired"],
	"notes": "Requests exceeding grace period are forcefully terminated. This prevents shutdown from hanging indefinitely on stuck requests."
}
