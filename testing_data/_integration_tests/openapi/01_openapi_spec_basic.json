{
	"name": "OpenAPI spec generation - basic",
	"description": "Tests that OpenAPI spec is generated and available at /openapi.json with correct structure",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "OpenAPI spec generation"
	},
	"handler": {
		"route": "/users",
		"method": "GET",
		"parameters": {
			"query": {
				"limit": {
					"type": "integer",
					"minimum": 1,
					"maximum": 100,
					"default": 10,
					"description": "Number of items to return"
				}
			}
		},
		"response_schema": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "integer"
					},
					"name": {
						"type": "string"
					}
				},
				"required": ["id", "name"]
			}
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Test API",
				"version": "1.0.0",
				"description": "API for testing OpenAPI generation"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/openapi.json",
		"headers": {
			"accept": "application/json"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "application/json"
		},
		"body_partial": {
			"openapi": "3.1.0",
			"info": {
				"title": "Test API",
				"version": "1.0.0",
				"description": "API for testing OpenAPI generation"
			},
			"paths": {
				"/users": {
					"get": {}
				}
			}
		}
	},
	"tags": ["openapi", "spec", "documentation", "middleware", "success"]
}
