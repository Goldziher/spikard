{
	"name": "OpenAPI with multiple server configurations",
	"description": "Tests OpenAPI spec generation with production, staging, and development server URLs",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "servers configuration"
	},
	"handler": {
		"route": "/api/status",
		"method": "GET",
		"response_schema": {
			"type": "object",
			"properties": {
				"status": {
					"type": "string",
					"enum": ["healthy", "degraded", "down"]
				},
				"environment": {
					"type": "string",
					"enum": ["production", "staging", "development"]
				}
			},
			"required": ["status", "environment"]
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Multi-Environment API",
				"version": "1.0.0",
				"description": "API with multiple deployment environments",
				"servers": [
					{
						"url": "https://api.example.com",
						"description": "Production server"
					},
					{
						"url": "https://staging-api.example.com",
						"description": "Staging server"
					},
					{
						"url": "http://localhost:8000",
						"description": "Development server"
					}
				]
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/openapi.json",
		"headers": {
			"accept": "application/json"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "application/json"
		},
		"body_partial": {
			"openapi": "3.1.0",
			"info": {
				"title": "Multi-Environment API",
				"version": "1.0.0"
			},
			"servers": [
				{
					"url": "https://api.example.com",
					"description": "Production server"
				},
				{
					"url": "https://staging-api.example.com",
					"description": "Staging server"
				},
				{
					"url": "http://localhost:8000",
					"description": "Development server"
				}
			]
		}
	},
	"tags": ["openapi", "servers", "configuration", "environments"],
	"notes": "Server URLs allow API clients to select target environment. Swagger UI displays these as a dropdown."
}
