{
	"name": "OpenAPI with tags and external documentation",
	"description": "Tests OpenAPI spec generation with endpoint tags and external documentation links",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "tags and external docs"
	},
	"handler": {
		"route": "/api/users",
		"method": "GET",
		"tags": ["Users", "Management"],
		"external_docs": {
			"description": "User Management Guide",
			"url": "https://docs.example.com/users"
		},
		"response_schema": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "integer"
					},
					"username": {
						"type": "string"
					}
				}
			}
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Tagged API",
				"version": "1.0.0",
				"description": "API with organized endpoint tags",
				"tags": [
					{
						"name": "Users",
						"description": "User management endpoints",
						"externalDocs": {
							"description": "User API Documentation",
							"url": "https://docs.example.com/users"
						}
					},
					{
						"name": "Management",
						"description": "Administrative management endpoints",
						"externalDocs": {
							"description": "Admin Guide",
							"url": "https://docs.example.com/admin"
						}
					}
				],
				"externalDocs": {
					"description": "Complete API Documentation",
					"url": "https://docs.example.com"
				}
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/openapi.json",
		"headers": {
			"accept": "application/json"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "application/json"
		},
		"body_partial": {
			"openapi": "3.1.0",
			"info": {
				"title": "Tagged API",
				"version": "1.0.0"
			},
			"tags": [
				{
					"name": "Users",
					"description": "User management endpoints",
					"externalDocs": {
						"description": "User API Documentation",
						"url": "https://docs.example.com/users"
					}
				},
				{
					"name": "Management",
					"description": "Administrative management endpoints",
					"externalDocs": {
						"description": "Admin Guide",
						"url": "https://docs.example.com/admin"
					}
				}
			],
			"externalDocs": {
				"description": "Complete API Documentation",
				"url": "https://docs.example.com"
			},
			"paths": {
				"/api/users": {
					"get": {
						"tags": ["Users", "Management"]
					}
				}
			}
		}
	},
	"tags": ["openapi", "tags", "documentation", "organization"],
	"notes": "Tags organize endpoints in Swagger UI sidebar. External docs provide links to detailed documentation."
}
