{
	"name": "Redoc with customization options",
	"description": "Tests Redoc serving with custom theme, layout options, and UI preferences",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"inspired_by": "Redoc configuration",
		"test_case": "redoc customization"
	},
	"handler": {
		"route": "/api/products",
		"method": "GET",
		"response_schema": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "integer"
					},
					"name": {
						"type": "string"
					},
					"price": {
						"type": "number"
					}
				}
			}
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Customized Redoc API",
				"version": "1.0.0",
				"description": "API with customized Redoc documentation",
				"redoc_path": "/redoc",
				"redoc_config": {
					"hideHostname": true,
					"nativeScrollbars": true,
					"disableSearch": false,
					"expandResponses": "200,201",
					"jsonSampleExpandLevel": 3,
					"hideSingleRequestSampleTab": true,
					"menuToggle": true,
					"pathInMiddlePanel": true,
					"requiredPropsFirst": true,
					"sortPropsAlphabetically": true,
					"showExtensions": true,
					"theme": {
						"colors": {
							"primary": {
								"main": "#3b82f6"
							}
						},
						"typography": {
							"fontSize": "14px",
							"fontFamily": "Inter, sans-serif",
							"headings": {
								"fontFamily": "Inter, sans-serif",
								"fontWeight": "600"
							}
						},
						"sidebar": {
							"backgroundColor": "#fafafa",
							"textColor": "#1f2937"
						}
					}
				}
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/redoc",
		"headers": {
			"accept": "text/html"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "text/html; charset=utf-8"
		},
		"body_contains": [
			"redoc",
			"hide-hostname=\"true\"",
			"native-scrollbars=\"true\"",
			"expand-responses=\"200,201\"",
			"json-sample-expand-level=\"3\"",
			"hide-single-request-sample-tab=\"true\"",
			"menu-toggle=\"true\"",
			"required-props-first=\"true\"",
			"sort-props-alphabetically=\"true\"",
			"theme='{\"colors\""
		]
	},
	"tags": ["openapi", "redoc", "customization", "ui", "documentation", "theming"],
	"notes": "Redoc offers three-panel layout with customizable theme. hideHostname removes server URL from display, nativeScrollbars improves mobile experience."
}
