{
	"name": "OpenAPI spec with API key security scheme",
	"description": "Tests that API key authentication is auto-detected and included in OpenAPI security schemes",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "OpenAPI security scheme detection - API Key"
	},
	"handler": {
		"route": "/api/data",
		"method": "GET",
		"parameters": {
			"headers": {
				"X-API-Key": {
					"type": "string",
					"required": true,
					"description": "API key for authentication"
				}
			}
		},
		"response_schema": {
			"type": "object",
			"properties": {
				"status": {
					"type": "string"
				}
			},
			"required": ["status"]
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "API Key Protected API",
				"version": "1.0.0"
			},
			"api_key_auth": {
				"enabled": true,
				"header_name": "X-API-Key",
				"keys": ["test-key-123"]
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/openapi.json",
		"headers": {
			"accept": "application/json"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "application/json"
		},
		"body_partial": {
			"openapi": "3.1.0",
			"components": {
				"securitySchemes": {
					"apiKeyAuth": {
						"type": "apiKey",
						"in": "header",
						"name": "X-API-Key"
					}
				}
			},
			"security": [
				{
					"apiKeyAuth": []
				}
			]
		}
	},
	"tags": ["openapi", "security", "api-key", "authentication", "middleware"],
	"notes": "API key config should be auto-detected and added to OpenAPI spec as a security scheme"
}
