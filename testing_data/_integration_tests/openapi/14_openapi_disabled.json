{
	"name": "OpenAPI generation disabled",
	"description": "Tests that OpenAPI endpoints return 404 when documentation generation is disabled",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "disabled openapi"
	},
	"handler": {
		"route": "/api/health",
		"method": "GET",
		"response_schema": {
			"type": "object",
			"properties": {
				"status": {
					"type": "string"
				}
			}
		},
		"middleware": {
			"openapi": {
				"enabled": false
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/openapi.json",
		"headers": {
			"accept": "application/json"
		}
	},
	"expected_response": {
		"status_code": 404,
		"headers": {
			"content-type": "application/problem+json"
		},
		"body": {
			"type": "https://spikard.dev/errors/not-found",
			"title": "Not Found",
			"status": 404,
			"detail": "OpenAPI documentation is not enabled"
		}
	},
	"tags": ["openapi", "disabled", "error", "404"],
	"notes": "When OpenAPI is disabled, /openapi.json, /docs, and /redoc should all return 404 with structured error response"
}
