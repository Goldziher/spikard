{
	"name": "Swagger UI with customization options",
	"description": "Tests Swagger UI serving with custom CSS, query parameters, and persistence settings",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"inspired_by": "Swagger UI configuration",
		"test_case": "swagger ui customization"
	},
	"handler": {
		"route": "/api/info",
		"method": "GET",
		"response_schema": {
			"type": "object",
			"properties": {
				"version": {
					"type": "string"
				}
			}
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Customized Swagger UI API",
				"version": "1.0.0",
				"swagger_ui_path": "/docs",
				"swagger_ui_config": {
					"deepLinking": true,
					"persistAuthorization": true,
					"displayRequestDuration": true,
					"filter": true,
					"showExtensions": true,
					"showCommonExtensions": true,
					"tryItOutEnabled": true,
					"requestSnippetsEnabled": true,
					"syntaxHighlight.theme": "monokai",
					"docExpansion": "list",
					"defaultModelsExpandDepth": 3
				},
				"swagger_ui_custom_css": ".swagger-ui .topbar { display: none; }\n.swagger-ui .info .title { color: #3b82f6; }"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/docs",
		"headers": {
			"accept": "text/html"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "text/html; charset=utf-8"
		},
		"body_contains": [
			"swagger-ui",
			"deepLinking: true",
			"persistAuthorization: true",
			"displayRequestDuration: true",
			"filter: true",
			"tryItOutEnabled: true",
			"docExpansion: \"list\"",
			".swagger-ui .topbar { display: none; }",
			".swagger-ui .info .title { color: #3b82f6; }"
		]
	},
	"tags": ["openapi", "swagger-ui", "customization", "ui", "documentation"],
	"notes": "Swagger UI supports extensive customization via config object and CSS. deepLinking enables direct links to operations, persistAuthorization saves auth across page reloads."
}
