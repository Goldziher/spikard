{
	"name": "Swagger UI serving",
	"description": "Tests that Swagger UI is served at the configured path with correct HTML",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "Swagger UI HTML serving"
	},
	"handler": {
		"route": "/health",
		"method": "GET",
		"response_schema": {
			"type": "object",
			"properties": {
				"status": {
					"type": "string"
				}
			},
			"required": ["status"]
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Health API",
				"version": "1.0.0",
				"swagger_ui_path": "/docs"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/docs",
		"headers": {
			"accept": "text/html"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "text/html"
		}
	},
	"tags": ["openapi", "swagger-ui", "documentation", "html", "middleware"],
	"notes": "Response should be HTML containing Swagger UI. Exact content matching not required, just status and content-type."
}
