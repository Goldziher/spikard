{
	"name": "Custom long timeout",
	"description": "Tests extended 60 second timeout for long-running operations",
	"category": "request_timeout",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower-http TimeoutLayer",
		"test_case": "Long 60s timeout configuration"
	},
	"handler": {
		"route": "/api/batch-process",
		"method": "POST",
		"middleware": {
			"request_timeout": {
				"timeout_seconds": 60
			}
		},
		"simulated_delay_ms": 45000,
		"response_type": "immediate"
	},
	"request": {
		"method": "POST",
		"path": "/api/batch-process",
		"body": {
			"items": [1, 2, 3]
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "batch processed",
			"delay_ms": 45000,
			"items_processed": 3
		}
	},
	"tags": ["timeout", "middleware", "200", "long-timeout", "configuration"],
	"notes": "45s request with 60s timeout - should succeed for long-running operations"
}
