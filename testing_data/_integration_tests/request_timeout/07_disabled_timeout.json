{
	"name": "Disabled timeout",
	"description": "Tests that zero/null timeout disables timeout enforcement",
	"category": "request_timeout",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower-http TimeoutLayer",
		"test_case": "Timeout disabled with 0/null value"
	},
	"handler": {
		"route": "/api/no-timeout",
		"method": "GET",
		"middleware": {
			"request_timeout": {
				"timeout_seconds": 0
			}
		},
		"simulated_delay_ms": 120000,
		"response_type": "immediate"
	},
	"request": {
		"method": "GET",
		"path": "/api/no-timeout"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "completed without timeout",
			"delay_ms": 120000
		}
	},
	"tags": ["timeout", "middleware", "200", "disabled", "configuration"],
	"notes": "Very long request (120s) with disabled timeout (0) - should succeed"
}
