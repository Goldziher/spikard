{
	"name": "Request ID present in request and response",
	"description": "Tests that request ID appears in both request and response headers with same value",
	"category": "request_id",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower-http request-id",
		"test_case": "Request ID consistency across request-response cycle"
	},
	"handler": {
		"route": "/api/echo",
		"method": "POST",
		"middleware": {
			"request_id": {
				"enabled": true,
				"header_name": "X-Request-ID",
				"format": "uuid_v4",
				"propagate_to_response": true
			}
		},
		"response_type": "success"
	},
	"request": {
		"method": "POST",
		"path": "/api/echo",
		"headers": {
			"X-Request-ID": "trace-2024-11-11-abc123"
		},
		"body": {
			"data": "test"
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "echoed",
			"received": {
				"data": "test"
			}
		},
		"headers": {
			"X-Request-ID": "trace-2024-11-11-abc123"
		}
	},
	"tags": ["request_id", "middleware", "tracing", "round-trip"],
	"notes": "Request ID should be identical in both request and response, enabling correlation in distributed tracing systems"
}
