{
	"name": "Partial content range request",
	"description": "Tests HTTP Range request returning 206 Partial Content response",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"cache_control": "public, max-age=86400"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/videos/demo.mp4",
		"headers": {
			"Range": "bytes=0-1023"
		}
	},
	"expected_response": {
		"status_code": 206,
		"headers": {
			"Content-Type": "video/mp4",
			"Content-Range": "bytes 0-1023/10485760",
			"Content-Length": "1024",
			"Accept-Ranges": "bytes",
			"Cache-Control": "public, max-age=86400",
			"ETag": "\"hij456\""
		},
		"body": {
			"simulated_file": "videos/demo.mp4",
			"simulated_size_bytes": 1024
		}
	},
	"tags": ["static_files", "middleware", "range_request", "partial_content", "206", "video"],
	"notes": "tower-http handles Range requests per RFC 7233. Essential for video/audio streaming and resumable downloads"
}
