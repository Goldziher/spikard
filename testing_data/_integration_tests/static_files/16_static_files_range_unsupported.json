{
	"name": "Multiple ranges not supported",
	"description": "Tests that multiple range requests return full content with 200 instead of 206",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"cache_control": "public, max-age=86400"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/documents/manual.pdf",
		"headers": {
			"Range": "bytes=0-999, 2000-2999, 5000-5999"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "application/pdf",
			"Content-Length": "524288",
			"Accept-Ranges": "bytes",
			"Cache-Control": "public, max-age=86400",
			"ETag": "\"klm789\""
		},
		"body": {
			"simulated_file": "documents/manual.pdf",
			"simulated_size_bytes": 524288
		}
	},
	"tags": ["static_files", "middleware", "range_request", "multipart_ranges", "unsupported"],
	"notes": "tower-http does not support multipart/byteranges responses. Returns full content with 200 per RFC 7233 section 4.1"
}
