{
	"name": "Directory request serves index.html",
	"description": "Tests automatic index file serving when requesting a directory path",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"index_file": "index.html",
				"cache_control": "no-cache"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/"
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "text/html; charset=utf-8",
			"Cache-Control": "no-cache",
			"ETag": "\"pqr678\"",
			"Accept-Ranges": "bytes"
		},
		"body": {
			"simulated_file": "index.html",
			"simulated_size_bytes": 3072
		}
	},
	"tags": ["static_files", "middleware", "index", "directory"],
	"notes": "tower_http::services::ServeDir::append_index_html_on_directories enables automatic index file serving"
}
