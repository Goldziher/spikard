{
	"name": "Rate limit - IP-based limiting enabled",
	"description": "Tests that rate limits are tracked per client IP address",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Per-IP rate limiting"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 5,
				"burst": 2,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.13"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "5",
			"RateLimit-Remaining": "4"
		}
	},
	"tags": ["rate_limit", "ip-based", "tracking", "success"],
	"notes": "Different IP addresses should have independent rate limit counters"
}
