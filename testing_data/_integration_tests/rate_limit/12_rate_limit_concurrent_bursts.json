{
	"name": "Rate limit - concurrent burst requests",
	"description": "Tests that concurrent burst requests are properly rate limited",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Concurrent request handling"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 3,
				"burst": 2,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.12"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "3",
			"RateLimit-Remaining": "2"
		}
	},
	"tags": ["rate_limit", "concurrent", "burst", "integration"],
	"notes": "Simulates concurrent requests to test GCRA algorithm under concurrent load"
}
