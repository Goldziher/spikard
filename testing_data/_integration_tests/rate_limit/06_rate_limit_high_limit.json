{
	"name": "Rate limit - high limit configuration",
	"description": "Tests rate limiting with very high per_second limit (1000/sec)",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "High traffic API endpoints"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 1000,
				"burst": 50,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.6"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "1000",
			"RateLimit-Remaining": "999"
		}
	},
	"tags": ["rate_limit", "configuration", "high-traffic", "success"],
	"notes": "High limits suitable for internal APIs or premium tiers"
}
