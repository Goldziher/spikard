{
	"name": "Rate limit - RateLimit-Remaining decrements",
	"description": "Validates that RateLimit-Remaining header decrements with each request",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "IETF draft-polli-ratelimit-headers",
		"test_case": "Remaining count validation"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 10,
				"burst": 5,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.17"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "10",
			"RateLimit-Remaining": "9"
		}
	},
	"request_sequence": [
		{
			"delay_ms": 0,
			"expected_status": 200
		},
		{
			"delay_ms": 0,
			"expected_status": 200
		}
	],
	"tags": ["rate_limit", "headers", "remaining-count", "validation"],
	"notes": "Each successful request should decrement RateLimit-Remaining by 1"
}
