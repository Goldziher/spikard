{
	"name": "Rate limit - burst allowed",
	"description": "Tests that burst requests within burst allowance succeed",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Burst requests succeed when within burst limit"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 5,
				"burst": 10,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.3"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "5",
			"RateLimit-Remaining": "4"
		}
	},
	"tags": ["rate_limit", "burst", "success", "gcra"],
	"notes": "With burst=10, client can make up to 15 rapid requests (per_second + burst)"
}
