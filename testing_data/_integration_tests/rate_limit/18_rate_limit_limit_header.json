{
	"name": "Rate limit - RateLimit-Limit header",
	"description": "Validates that RateLimit-Limit header shows configured per_second limit",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "IETF draft-polli-ratelimit-headers",
		"test_case": "Limit header validation"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 50,
				"burst": 10,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.18"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "50",
			"RateLimit-Remaining": "49"
		}
	},
	"tags": ["rate_limit", "headers", "limit-header", "validation"],
	"notes": "RateLimit-Limit should match the configured per_second value"
}
