{
	"name": "Rate limit - zero burst allowance",
	"description": "Tests rate limiting with no burst allowance (burst=0)",
	"category": "rate_limit",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower_governor",
		"test_case": "Strict rate limiting without burst capacity"
	},
	"handler": {
		"route": "/api/rate-limited",
		"method": "GET",
		"middleware": {
			"rate_limit": {
				"per_second": 5,
				"burst": 0,
				"ip_based": true
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/rate-limited",
		"client_ip": "192.168.1.8"
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Success"
		},
		"headers": {
			"RateLimit-Limit": "5",
			"RateLimit-Remaining": "4"
		}
	},
	"tags": ["rate_limit", "configuration", "no-burst", "success"],
	"notes": "Zero burst means only per_second requests allowed, no burst capacity"
}
