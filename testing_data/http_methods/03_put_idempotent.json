{
	"name": "PUT - Idempotent operation",
	"description": "Tests PUT idempotency - repeated calls produce same result",
	"source": {
		"framework": "fastapi",
		"test_file": "tests/test_methods.py",
		"test_function": "test_put_idempotent"
	},
	"handler": {
		"route": "/items/{id}",
		"method": "PUT",
		"body_schema": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"name": {
					"type": "string"
				},
				"price": {
					"type": "number"
				}
			},
			"required": ["id", "name", "price"]
		},
		"parameters": {
			"path": {
				"id": {
					"type": "string"
				}
			}
		}
	},
	"request": {
		"method": "PUT",
		"path": "/items/1",
		"headers": {
			"Content-Type": "application/json"
		},
		"body": {
			"id": 1,
			"name": "Fixed Name",
			"price": 50.0
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"id": 1,
			"name": "Fixed Name",
			"price": 50.0
		}
	},
	"notes": "PUT is idempotent - calling multiple times with same data produces same result"
}
