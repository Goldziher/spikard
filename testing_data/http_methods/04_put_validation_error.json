{
  "name": "PUT - Validation error",
  "description": "Tests PUT with invalid data returns 422",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_methods.py",
    "test_function": "test_put_validation"
  },
  "request": {
    "method": "PUT",
    "path": "/items/1",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "id": 1,
      "name": "X",
      "price": -10
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "detail": [
        {
          "type": "string_too_short",
          "loc": ["body", "name"],
          "msg": "String should have at least 3 characters",
          "input": "X"
        },
        {
          "type": "greater_than",
          "loc": ["body", "price"],
          "msg": "Input should be greater than 0",
          "input": -10
        }
      ]
    }
  },
  "notes": "PUT validates the entire replacement body"
}
