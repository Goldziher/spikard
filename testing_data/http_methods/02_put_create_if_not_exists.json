{
	"name": "PUT - Create resource if doesn't exist",
	"description": "Tests PUT creating new resource at specific URI",
	"source": {
		"framework": "fastapi",
		"test_file": "tests/test_methods.py",
		"test_function": "test_put_create"
	},
	"handler": {
		"route": "/items/{id}",
		"method": "PUT",
		"body_schema": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"name": {
					"type": "string"
				},
				"price": {
					"type": "number"
				}
			},
			"required": ["id", "name", "price"]
		},
		"parameters": {
			"path": {
				"id": {
					"type": "string"
				}
			}
		}
	},
	"request": {
		"method": "PUT",
		"path": "/items/999",
		"headers": {
			"Content-Type": "application/json"
		},
		"body": {
			"id": 999,
			"name": "New Item",
			"price": 49.99
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"id": 999,
			"name": "New Item",
			"price": 49.99
		}
	},
	"notes": "PUT returns 200 OK (test mock doesn't differentiate create vs update)"
}
