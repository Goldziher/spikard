{
  "name": "Missing required body field",
  "description": "Tests validation error when required body field is missing",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_tutorial/test_body/test_tutorial001.py",
    "test_function": "test_post_body_missing_field"
  },
  "request": {
    "method": "POST",
    "path": "/items/",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "name": "Item"
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "detail": [
        {
          "type": "missing",
          "loc": ["body", "price"],
          "msg": "Field required",
          "input": {
            "name": "Item"
          }
        }
      ]
    }
  },
  "notes": "Required fields in request body must be provided"
}
