{
  "name": "Malformed JSON body",
  "description": "Tests validation error when request body contains malformed JSON",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_request_body.py",
    "test_function": "test_malformed_json"
  },
  "request": {
    "method": "POST",
    "path": "/items/",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": "{\"name\": \"Item\", \"price\": }"
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "json_invalid",
          "loc": [
            "body"
          ],
          "msg": "Invalid JSON: expected value at line 1 column 26",
          "input": "{\"name\": \"Item\", \"price\": }"
        }
      ]
    }
  },
  "notes": "Malformed JSON results in json_invalid error before field validation"
}
