{
	"name": "Form data exceeds limit",
	"description": "URL-encoded form data exceeding limit returns 413",
	"category": "body_size_limit",
	"handler": {
		"route": "/api/form",
		"method": "POST",
		"middleware": {
			"body_size_limit": {
				"max_body_size_bytes": 2048
			}
		}
	},
	"request": {
		"method": "POST",
		"path": "/api/form",
		"headers": {
			"Content-Type": "application/x-www-form-urlencoded",
			"Content-Length": "4096"
		},
		"body": {
			"simulated_size_bytes": 4096
		}
	},
	"expected_response": {
		"status_code": 413,
		"body": {
			"type": "https://spikard.dev/errors/payload-too-large",
			"title": "Payload Too Large",
			"status": 413,
			"detail": "Request body size (4096 bytes) exceeds maximum allowed size (2048 bytes)"
		}
	},
	"tags": ["body_size_limit", "middleware", "413", "form-data", "content-type"],
	"notes": "URL-encoded form data with body exceeding 2KB limit"
}
