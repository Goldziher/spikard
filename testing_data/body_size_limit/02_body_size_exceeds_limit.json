{
	"name": "Body size exceeds limit",
	"description": "Tests 413 response when request body exceeds configured size limit",
	"category": "body_size_limit",
	"handler": {
		"route": "/api/data",
		"method": "POST",
		"middleware": {
			"body_size_limit": {
				"max_body_size_bytes": 10240
			}
		}
	},
	"request": {
		"method": "POST",
		"path": "/api/data",
		"headers": {
			"Content-Type": "application/json",
			"Content-Length": "20480"
		},
		"body": {
			"simulated_size_bytes": 20480
		}
	},
	"expected_response": {
		"status_code": 413,
		"body": {
			"type": "https://spikard.dev/errors/payload-too-large",
			"title": "Payload Too Large",
			"status": 413,
			"detail": "Request body size (20480 bytes) exceeds maximum allowed size (10240 bytes)"
		}
	},
	"tags": ["body_size_limit", "middleware", "413", "validation"],
	"notes": "20KB body with 10KB limit should return 413"
}
