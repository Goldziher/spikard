{
	"name": "Body size within limit",
	"description": "Request body within configured limit should succeed with 200",
	"category": "body_size_limit",
	"handler": {
		"route": "/api/data",
		"method": "POST",
		"middleware": {
			"body_size_limit": {
				"max_body_size_bytes": 10240
			}
		}
	},
	"request": {
		"method": "POST",
		"path": "/api/data",
		"headers": {
			"Content-Type": "application/json",
			"Content-Length": "1024"
		},
		"body": {
			"simulated_size_bytes": 1024,
			"content": {
				"data": "test payload within limit"
			}
		}
	},
	"expected_response": {
		"status_code": 200,
		"body": {
			"message": "Data received successfully",
			"bytes_received": 1024
		}
	},
	"tags": ["body_size_limit", "middleware", "200", "success"],
	"notes": "1KB body with 10KB limit should succeed"
}
