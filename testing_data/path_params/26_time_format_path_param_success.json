{
  "name": "26_time_format_path_param_success",
  "description": "Path parameter with valid time format should be accepted",
  "category": "path_params",
  "source": {
    "framework": "spikard",
    "inspired_by": "litestar",
    "test_case": "Time type path parameter conversion"
  },
  "handler": {
    "route": "/schedule/{time}",
    "method": "GET",
    "parameters": {
      "path": {
        "time": {
          "type": "string",
          "format": "time"
        }
      }
    }
  },
  "request": {
    "method": "GET",
    "path": "/schedule/14:30:00"
  },
  "expected_response": {
    "status_code": 200,
    "body": {
      "time": "14:30:00"
    }
  },
  "tags": ["path_params", "time", "format", "iso8601", "validation", "success"]
}
