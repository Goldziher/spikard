{
  "name": "Integer path parameter with gt constraint - failure",
  "description": "Tests integer path parameter with gt validation fails when value too small",
  "category": "path_params",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_path.py",
    "test_function": "test_path_param_gt_2"
  },
  "handler": {
    "route": "/path/param-gt/{item_id}",
    "method": "GET",
    "parameters": {
      "path": {
        "item_id": {
          "type": "integer",
          "exclusiveMinimum": 3
        }
      }
    }
  },
  "request": {
    "method": "GET",
    "path": "/path/param-gt/2"
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "greater_than",
          "loc": [
            "path",
            "item_id"
          ],
          "msg": "Input should be greater than 3",
          "input": 2,
          "ctx": {
            "gt": 3
          }
        }
      ]
    }
  },
  "notes": "Path param with gt=3 constraint, value 2 fails validation"
}
