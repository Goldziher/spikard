{
  "name": "Path parameter with type syntax - integer",
  "description": "Tests path parameter with :int type syntax auto-generates correct schema",
  "category": "path_params",
  "source": {
    "framework": "spikard",
    "test_file": "type_syntax_demo",
    "test_function": "test_type_syntax_int"
  },
  "handler": {
    "route": "/type-syntax/users/{user_id:int}",
    "method": "GET",
    "parameters": {
      "path": {
        "user_id": {
          "type": "string"
        }
      }
    }
  },
  "request": {
    "method": "GET",
    "path": "/type-syntax/users/42"
  },
  "expected_response": {
    "status_code": 200,
    "body": {
      "user_id": "42"
    }
  },
  "notes": "Type syntax :int auto-generates {\"type\": \"integer\"} schema"
}
