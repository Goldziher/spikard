{
  "name": "String path parameter with min_length - failure",
  "description": "Tests string path parameter with min_length validation fails",
  "category": "path_params",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_path.py",
    "test_function": "test_path_param_minlength_fo"
  },
  "handler": {
    "route": "/path/param-minlength/{item_id}",
    "method": "GET",
    "parameters": {
      "path": {
        "item_id": {
          "type": "string",
          "minLength": 3
        }
      }
    }
  },
  "request": {
    "method": "GET",
    "path": "/path/param-minlength/fo"
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "string_too_short",
          "loc": [
            "path",
            "item_id"
          ],
          "msg": "String should have at least 3 characters",
          "input": "fo",
          "ctx": {
            "min_length": 3
          }
        }
      ]
    }
  },
  "notes": "Path param with min_length=3, value 'fo' (2 chars) fails"
}
