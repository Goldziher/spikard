{
  "name": "31_string_minlength_path_failure",
  "description": "Path parameter with string below minLength constraint should fail",
  "category": "path_params",
  "source": {
    "framework": "spikard",
    "inspired_by": "litestar",
    "test_case": "String minLength validation failure in path"
  },
  "handler": {
    "route": "/users/{username}",
    "method": "GET",
    "parameters": {
      "path": {
        "username": {
          "type": "string",
          "minLength": 3,
          "required": true
        }
      }
    }
  },
  "request": {
    "method": "GET",
    "path": "/users/ab"
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "validation_error",
          "loc": [
            "path",
            "username"
          ],
          "msg": "String length must be at least 3",
          "ctx": {
            "min_length": 3,
            "actual_length": 2
          }
        }
      ]
    }
  },
  "tags": [
    "path_params",
    "string",
    "minLength",
    "validation",
    "error"
  ]
}
