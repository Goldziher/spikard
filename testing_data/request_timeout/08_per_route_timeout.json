{
	"name": "Per-route timeout override",
	"description": "Tests route-specific timeout overriding global timeout",
	"category": "request_timeout",
	"source": {
		"framework": "spikard",
		"inspired_by": "tower-http TimeoutLayer",
		"test_case": "Route-specific timeout configuration"
	},
	"handler": {
		"route": "/api/custom-route",
		"method": "GET",
		"middleware": {
			"request_timeout": {
				"timeout_seconds": 30,
				"route_timeouts": {
					"/api/custom-route": 5
				}
			}
		},
		"simulated_delay_ms": 7000,
		"response_type": "immediate"
	},
	"request": {
		"method": "GET",
		"path": "/api/custom-route"
	},
	"expected_response": {
		"status_code": 504,
		"body": {
			"type": "https://spikard.dev/errors/request-timeout",
			"title": "Gateway Timeout",
			"status": 504,
			"detail": "Request processing exceeded the configured timeout of 5 seconds"
		}
	},
	"tags": ["timeout", "middleware", "504", "per-route", "configuration"],
	"notes": "7s request with 5s route-specific timeout (overriding 30s global) - should return 504"
}
