{
	"name": "Background event logging",
	"description": "Enqueues a background job that appends the posted event to shared state",
	"handler": {
		"route": "/background/events",
		"method": "POST",
		"body_schema": {
			"type": "object",
			"properties": {
				"event": { "type": "string" }
			},
			"required": ["event"],
			"additionalProperties": false
		}
	},
	"request": {
		"method": "POST",
		"path": "/background/events",
		"body": { "event": "alpha" }
	},
	"expected_response": {
		"status_code": 202,
		"headers": {
			"content-type": "application/json"
		}
	},
	"background": {
		"state_path": "/background/events",
		"state_key": "events",
		"value_field": "event",
		"expected_state": ["alpha"]
	},
	"tags": ["background", "async"]
}
