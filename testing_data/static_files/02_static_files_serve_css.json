{
	"name": "Serve CSS file",
	"description": "Tests serving static CSS stylesheet with correct Content-Type",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"cache_control": "public, max-age=31536000, immutable"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/styles/main.css"
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "text/css; charset=utf-8",
			"Cache-Control": "public, max-age=31536000, immutable",
			"ETag": "\"def456\"",
			"Accept-Ranges": "bytes"
		},
		"body": {
			"simulated_file": "styles/main.css",
			"simulated_size_bytes": 4096,
			"simulated_content_sample": "body { font-family: sans-serif; }"
		}
	},
	"tags": ["static_files", "middleware", "css", "mime_types", "long_cache"],
	"notes": "CSS files typically use long cache durations with immutable flag for versioned assets"
}
