{
	"name": "Serve PNG image",
	"description": "Tests serving binary image file with correct Content-Type and binary handling",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"cache_control": "public, max-age=604800"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/images/logo.png"
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "image/png",
			"Cache-Control": "public, max-age=604800",
			"ETag": "\"jkl012\"",
			"Accept-Ranges": "bytes"
		},
		"body": {
			"simulated_file": "images/logo.png",
			"simulated_size_bytes": 15360
		}
	},
	"tags": ["static_files", "middleware", "image", "png", "binary", "mime_types"],
	"notes": "Binary files are served without charset parameter. tower-http handles binary content efficiently"
}
