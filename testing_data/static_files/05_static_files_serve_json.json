{
	"name": "Serve JSON file",
	"description": "Tests serving static JSON data file with correct Content-Type",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"cache_control": "no-cache"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/data/config.json"
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "application/json",
			"Cache-Control": "no-cache",
			"ETag": "\"mno345\"",
			"Accept-Ranges": "bytes"
		},
		"body": {
			"simulated_file": "data/config.json",
			"simulated_size_bytes": 1024,
			"simulated_content_sample": "{\"version\": \"1.0.0\"}"
		}
	},
	"tags": ["static_files", "middleware", "json", "mime_types", "no_cache"],
	"notes": "JSON configuration files often use no-cache to ensure clients get fresh data"
}
