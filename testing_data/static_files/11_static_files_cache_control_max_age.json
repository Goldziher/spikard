{
	"name": "Cache-Control with max-age for static assets",
	"description": "Tests proper Cache-Control header with max-age directive for long-lived assets",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"cache_control": "public, max-age=31536000, immutable"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/assets/bundle-v1.2.3.js"
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "application/javascript; charset=utf-8",
			"Cache-Control": "public, max-age=31536000, immutable",
			"ETag": "\"yza567\"",
			"Accept-Ranges": "bytes",
			"Expires": "Thu, 31 Dec 2026 23:59:59 GMT"
		},
		"body": {
			"simulated_file": "assets/bundle-v1.2.3.js",
			"simulated_size_bytes": 102400
		}
	},
	"tags": ["static_files", "middleware", "cache_control", "max_age", "immutable", "versioned_assets"],
	"notes": "Versioned assets can use long cache durations (1 year = 31536000 seconds) with immutable flag"
}
