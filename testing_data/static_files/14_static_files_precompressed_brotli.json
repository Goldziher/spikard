{
	"name": "Serve pre-compressed Brotli file",
	"description": "Tests serving .br pre-compressed file when client accepts Brotli encoding",
	"category": "static_files",
	"handler": {
		"route": "/*filepath",
		"method": "GET",
		"middleware": {
			"static_files": {
				"root_dir": "./public",
				"precompressed": true,
				"cache_control": "public, max-age=3600"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/js/app.js",
		"headers": {
			"Accept-Encoding": "br, gzip, deflate"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"Content-Type": "application/javascript; charset=utf-8",
			"Content-Encoding": "br",
			"Cache-Control": "public, max-age=3600",
			"ETag": "\"efg123-br\"",
			"Accept-Ranges": "bytes",
			"Vary": "Accept-Encoding"
		},
		"body": {
			"simulated_file": "js/app.js.br",
			"simulated_size_bytes": 1536
		}
	},
	"tags": ["static_files", "middleware", "compression", "brotli", "precompressed"],
	"notes": "tower_http::services::ServeDir::precompressed_br() serves .br files with higher priority than gzip. Brotli typically achieves better compression ratios"
}
