{
	"name": "Bearer token without prefix",
	"description": "Tests JWT rejection when token is provided without 'Bearer ' prefix in Authorization header",
	"category": "auth",
	"source": {
		"framework": "spikard",
		"inspired_by": "oauth2 rfc6750",
		"test_case": "bearer token format validation"
	},
	"handler": {
		"route": "/api/protected",
		"method": "GET",
		"parameters": {
			"headers": {
				"Authorization": {
					"type": "string",
					"required": true,
					"description": "JWT token in Bearer format"
				}
			}
		},
		"middleware": {
			"jwt_auth": {
				"enabled": true,
				"algorithm": "HS256",
				"secret": "test-secret-key-do-not-use-in-production"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/api/protected",
		"headers": {
			"Authorization": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiJ1c2VyMTIzIiwiZXhwIjoyNjI2NzgzOTQ2LCJpYXQiOjE3NjI3ODM5NDZ9.8yXqZ9jKCR0BwqJc7pN_QvD3mYLxHfWzUeIaGkTnOsA"
		}
	},
	"expected_response": {
		"status_code": 401,
		"body": {
			"type": "https://spikard.dev/errors/unauthorized",
			"title": "Unauthorized",
			"status": 401,
			"detail": "Authorization header must use Bearer scheme: 'Bearer <token>'"
		}
	},
	"tags": ["auth", "jwt", "bearer", "format", "validation", "401", "security"],
	"notes": "Tests Bearer token format validation per RFC 6750 section 2.1. Authorization header must include 'Bearer ' prefix."
}
