{
	"name": "JWT authentication - invalid signature",
	"description": "Tests JWT authentication failure when token signature does not match the secret",
	"category": "auth",
	"source": {
		"framework": "spikard",
		"inspired_by": "fastapi security",
		"test_case": "JWT token invalid signature"
	},
	"handler": {
		"route": "/protected/user",
		"method": "GET",
		"parameters": {
			"headers": {
				"Authorization": {
					"type": "string",
					"required": true
				}
			}
		},
		"middleware": {
			"jwt_auth": {
				"enabled": true,
				"algorithm": "HS256",
				"secret": "test-secret-key-do-not-use-in-production"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/protected/user",
		"headers": {
			"Authorization": "Bearer eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJzdWIiOiJ1c2VyMTIzIiwiZXhwIjoyNTM0MDIzMDA3OTksImlhdCI6MTczMTI1MjAwMH0.invalid_signature_here"
		}
	},
	"expected_response": {
		"status_code": 401,
		"body": {
			"type": "https://spikard.dev/errors/unauthorized",
			"title": "JWT validation failed",
			"status": 401,
			"detail": "Token signature is invalid"
		}
	},
	"tags": ["auth", "jwt", "bearer", "security", "middleware", "error", "unauthorized", "signature"]
}
