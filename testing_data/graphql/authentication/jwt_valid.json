{
	"name": "jwt_valid",
	"description": "Query with valid JWT token in Authorization header",
	"operation_type": "query",
	"endpoint": "/graphql",
	"schema": "type Query {\n  currentUser: User\n}\n\ntype User {\n  id: String!\n  email: String!\n  name: String!\n}",
	"request": {
		"method": "POST",
		"path": "/graphql",
		"query": "query {\n  currentUser {\n    id\n    email\n    name\n  }\n}",
		"headers": {
			"Content-Type": "application/json"
		},
		"body": {
			"query": "query {\n  currentUser {\n    id\n    email\n    name\n  }\n}"
		}
	},
	"expected_response": {
		"status_code": 200,
		"data": {
			"currentUser": {
				"id": "user123",
				"email": "john@example.com",
				"name": "John Doe"
			}
		}
	},
	"resolvers": {
		"Query.currentUser": {
			"type": "mock",
			"return_value": {
				"id": "user123",
				"email": "john@example.com",
				"name": "John Doe"
			}
		}
	},
	"tags": ["authentication", "jwt", "valid-token"]
}
