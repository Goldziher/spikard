{
  "name": "Header validation - max_length constraint fail",
  "description": "Tests header validation with max_length constraint failure",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_tutorial/test_header_params/test_tutorial002.py",
    "test_function": "test_header_max_length"
  },
  "request": {
    "method": "GET",
    "path": "/headers/max-length",
    "headers": {
      "X-Session-Id": "this_is_way_too_long_for_validation"
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "string_too_long",
          "loc": [
            "headers",
            "x-session-id"
          ],
          "msg": "String should have at most 20 characters",
          "input": "this_is_way_too_long_for_validation",
          "ctx": {
            "max_length": 20
          }
        }
      ]
    }
  },
  "notes": "max_length=20 constraint on header value",
  "handler": {
    "route": "/headers/max-length",
    "method": "GET",
    "parameters": {
      "headers": {
        "X-Session-Id": {
          "type": "string",
          "annotation": "str",
          "maxLength": 20
        }
      }
    }
  }
}
