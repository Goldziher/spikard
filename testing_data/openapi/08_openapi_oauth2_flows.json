{
	"name": "OpenAPI with OAuth2 flows",
	"description": "Tests OpenAPI spec generation with OAuth2 authorization code and client credentials flows",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"inspired_by": "FastAPI OAuth2",
		"test_case": "oauth2 security scheme"
	},
	"handler": {
		"route": "/oauth/users",
		"method": "GET",
		"parameters": {
			"headers": {
				"Authorization": {
					"type": "string",
					"required": true,
					"description": "OAuth2 access token in Bearer format"
				}
			}
		},
		"response_schema": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "integer"
					},
					"username": {
						"type": "string"
					}
				},
				"required": ["id", "username"]
			}
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "OAuth2 API",
				"version": "1.0.0",
				"description": "API with OAuth2 authentication flows",
				"oauth2": {
					"authorization_url": "https://auth.example.com/oauth/authorize",
					"token_url": "https://auth.example.com/oauth/token",
					"scopes": {
						"read:users": "Read user information",
						"write:users": "Modify user information",
						"admin": "Administrative access"
					}
				}
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/openapi.json",
		"headers": {
			"accept": "application/json"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "application/json"
		},
		"body_partial": {
			"openapi": "3.1.0",
			"info": {
				"title": "OAuth2 API",
				"version": "1.0.0"
			},
			"components": {
				"securitySchemes": {
					"oauth2": {
						"type": "oauth2",
						"flows": {
							"authorizationCode": {
								"authorizationUrl": "https://auth.example.com/oauth/authorize",
								"tokenUrl": "https://auth.example.com/oauth/token",
								"scopes": {
									"read:users": "Read user information",
									"write:users": "Modify user information",
									"admin": "Administrative access"
								}
							},
							"clientCredentials": {
								"tokenUrl": "https://auth.example.com/oauth/token",
								"scopes": {
									"read:users": "Read user information",
									"write:users": "Modify user information",
									"admin": "Administrative access"
								}
							}
						}
					}
				}
			},
			"security": [
				{
					"oauth2": ["read:users"]
				}
			]
		}
	},
	"tags": ["openapi", "security", "oauth2", "authentication", "authorization"],
	"notes": "OAuth2 flows support both authorization code (user consent) and client credentials (machine-to-machine) patterns"
}
