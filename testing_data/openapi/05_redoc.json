{
	"name": "Redoc serving",
	"description": "Tests that Redoc is served at the configured path with correct HTML",
	"category": "openapi",
	"source": {
		"framework": "spikard",
		"test_case": "Redoc HTML serving"
	},
	"handler": {
		"route": "/status",
		"method": "GET",
		"response_schema": {
			"type": "object",
			"properties": {
				"uptime": {
					"type": "integer"
				}
			},
			"required": ["uptime"]
		},
		"middleware": {
			"openapi": {
				"enabled": true,
				"title": "Status API",
				"version": "1.0.0",
				"redoc_path": "/redoc"
			}
		}
	},
	"request": {
		"method": "GET",
		"path": "/redoc",
		"headers": {
			"accept": "text/html"
		}
	},
	"expected_response": {
		"status_code": 200,
		"headers": {
			"content-type": "text/html"
		}
	},
	"tags": ["openapi", "redoc", "documentation", "html", "middleware"],
	"notes": "Response should be HTML containing Redoc. Exact content matching not required, just status and content-type."
}
