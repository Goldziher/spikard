{
  "name": "46_minproperties_validation_failure",
  "description": "Object with fewer properties than minProperties should fail",
  "category": "json_bodies",
  "source": {
    "framework": "spikard",
    "inspired_by": "fastify",
    "test_case": "minProperties constraint validation failure"
  },
  "handler": {
    "route": "/config",
    "method": "POST",
    "body_schema": {
      "type": "object",
      "minProperties": 2
    }
  },
  "request": {
    "method": "POST",
    "path": "/config",
    "body": {
      "host": "localhost"
    }
  },
  "expected_response": {
    "status_code": 422,
    "validation_errors": [
      {
        "type": "validation_error",
        "loc": ["body"],
        "msg": "Object must have at least 2 properties",
        "ctx": {
          "min_properties": 2,
          "actual_properties": 1
        }
      }
    ]
  },
  "tags": ["json_bodies", "minProperties", "validation", "error"]
}
