{
  "name": "String pattern validation - fail",
  "description": "Tests string field with regex pattern constraint failure",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_tutorial/test_body_fields/test_tutorial001.py",
    "test_function": "test_pattern_fail"
  },
  "request": {
    "method": "POST",
    "path": "/items/validated",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "name": "Item",
      "sku": "ABC-123"
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "detail": [
        {
          "type": "string_pattern_mismatch",
          "loc": ["body", "sku"],
          "msg": "String should match pattern '^[A-Z]{3}[0-9]{4}$'",
          "input": "ABC-123",
          "ctx": {
            "pattern": "^[A-Z]{3}[0-9]{4}$"
          }
        }
      ]
    }
  },
  "notes": "SKU pattern requires 3 uppercase letters + 4 digits (no hyphen)"
}
