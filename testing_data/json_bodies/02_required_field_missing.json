{
  "name": "Required field missing - validation error",
  "description": "Tests validation error when required field is missing",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_tutorial/test_body/test_tutorial001.py",
    "test_function": "test_post_body_missing_required"
  },
  "handler": {
    "route": "/items/",
    "method": "POST",
    "body_schema": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "price",
        "name"
      ]
    }
  },
  "request": {
    "method": "POST",
    "path": "/items/",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "description": "A very nice Item",
      "price": 35.4
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "missing",
          "loc": [
            "body",
            "name"
          ],
          "msg": "Field required",
          "input": {
            "description": "A very nice Item",
            "price": 35.4
          }
        }
      ]
    }
  },
  "notes": "Required 'name' field is missing"
}
