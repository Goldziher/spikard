{
  "name": "40_anyof_schema_failure",
  "description": "anyOf schema composition - fails when no schemas match",
  "category": "json_bodies",
  "source": {
    "framework": "spikard",
    "inspired_by": "fastify",
    "test_case": "anyOf schema composition failure"
  },
  "handler": {
    "route": "/contact",
    "method": "POST",
    "body_schema": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      },
      "anyOf": [
        {
          "required": [
            "email"
          ]
        },
        {
          "required": [
            "phone"
          ]
        }
      ]
    }
  },
  "request": {
    "method": "POST",
    "path": "/contact",
    "body": {
      "name": "John Doe"
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "validation_error",
          "loc": [
            "body"
          ],
          "msg": "{\"name\":\"John Doe\"} is not valid under any of the schemas listed in the 'anyOf' keyword",
          "input": {
            "name": "John Doe"
          }
        }
      ]
    }
  },
  "tags": [
    "json_bodies",
    "anyOf",
    "composition",
    "validation",
    "error"
  ]
}
