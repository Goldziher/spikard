{
  "name": "Numeric ge validation - fail",
  "description": "Tests numeric field with ge (greater than or equal) constraint failure",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_tutorial/test_body_fields/test_tutorial001.py",
    "test_function": "test_numeric_ge_fail"
  },
  "handler": {
    "route": "/items/validated",
    "method": "POST",
    "body_schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number",
          "minimum": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "price"
      ]
    }
  },
  "request": {
    "method": "POST",
    "path": "/items/validated",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "name": "Item",
      "price": 0.5
    }
  },
  "expected_response": {
    "status_code": 422,
    "body": {
      "type": "https://spikard.dev/errors/validation-error",
      "title": "Request Validation Failed",
      "status": 422,
      "detail": "1 validation error in request",
      "errors": [
        {
          "type": "greater_than_equal",
          "loc": [
            "body",
            "price"
          ],
          "msg": "Input should be greater than or equal to 1",
          "input": 0.5,
          "ctx": {
            "ge": 1
          }
        }
      ]
    }
  },
  "notes": "price field has ge=1 constraint, 0.5 is invalid"
}
