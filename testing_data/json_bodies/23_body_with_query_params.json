{
  "name": "Body with query parameters",
  "description": "Tests JSON body combined with query parameters",
  "source": {
    "framework": "fastapi",
    "test_file": "tests/test_tutorial/test_body_multiple_params/test_tutorial003.py",
    "test_function": "test_body_with_query"
  },
  "handler": {
    "route": "/items/?limit=10",
    "method": "POST",
    "parameters": {
      "query": {
        "limit": {
          "type": "integer"
        }
      }
    },
    "body_schema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "price"
      ]
    }
  },
  "request": {
    "method": "POST",
    "path": "/items/?limit=10",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "name": "Item",
      "price": 42.0
    }
  },
  "expected_response": {
    "status_code": 200,
    "body": {
      "item": {
        "name": "Item",
        "price": 42.0
      },
      "limit": 10
    }
  },
  "notes": "JSON body combined with query parameter 'limit'"
}
