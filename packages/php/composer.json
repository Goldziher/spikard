{
	"name": "spikard/extension",
	"description": "PHP bindings for the Spikard runtime (ext-php-rs scaffold).",
	"type": "library",
	"license": "MIT",
	"homepage": "https://github.com/Goldziher/spikard",
	"require": {
		"php": "^8.2"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.69",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^1.12",
		"phpunit/phpunit": "^11.3"
	},
	"autoload": {
		"psr-4": {
			"Spikard\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Spikard\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"phpstan": "php -d detect_unicode=0 vendor/bin/phpstan --configuration=phpstan.neon",
		"csfixer": "PHP_CS_FIXER_IGNORE_ENV=1 php vendor/bin/php-cs-fixer fix --config php-cs-fixer.php src tests",
		"format": "@csfixer",
		"format:check": "PHP_CS_FIXER_IGNORE_ENV=1 php vendor/bin/php-cs-fixer fix --config php-cs-fixer.php --dry-run src tests",
		"test": "php -d detect_unicode=0 vendor/bin/phpunit --configuration phpunit.xml",
		"lint": "@phpstan",
		"lint:fix": ["@csfixer", "@phpstan"]
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
