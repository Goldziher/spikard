{
	"name": "@spikard/node",
	"version": "0.1.0",
	"description": "High-performance HTTP framework for Node.js/TypeScript. Type-safe routing, validation, and testing powered by Rust core.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "pnpm build:native && tsup",
		"build:native": "cd ../../crates/spikard-node && napi build --platform --release -o ../../packages/node",
		"build:debug": "cd ../../crates/spikard-node && napi build --platform -o ../../packages/node",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src",
		"lint:fix": "biome check --write src",
		"format": "biome format --write src",
		"clean": "rm -rf dist node_modules spikard.*.node"
	},
	"keywords": [
		"http",
		"framework",
		"typescript",
		"nodejs",
		"rust",
		"napi",
		"performance",
		"validation",
		"testing",
		"type-safe"
	],
	"author": {
		"name": "Na'aman Hirschfeld",
		"email": "nhirschfeld@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Goldziher/spikard"
	},
	"homepage": "https://github.com/Goldziher/spikard",
	"bugs": {
		"url": "https://github.com/Goldziher/spikard/issues"
	},
	"license": "MIT",
	"files": [
		"dist",
		"README.md"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"@napi-rs/cli": "^3.4.1",
		"@types/node": "^24.10.1",
		"@types/ws": "^8.18.1",
		"@vitest/coverage-v8": "^4.0.11",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.11",
		"ws": "^8.18.3"
	},
	"engines": {
		"node": ">=20"
	},
	"dependencies": {
		"zod": "^4.1.12"
	}
}
